<% include ../partials/header.ejs %>


<div class="container ">
    <h1 style="text-align: center">Edit <%=campground.name%></h1>

    <div class="row ">

        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="form-control"    name="campground[name]" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"  name="campground[image]"   value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"   name="campground[description]"   value="<%=campground.description%>" >
                </div>

                <div class="form-group">
                    <input type="number" class="form-control"   name="campground[price]"
                           value="<%=campground.price%>" min="0.01" step="0.01">
                </div>

                <button type="submit" class="btn btn-primary" style="width:100%">Submit</button>
            </form><a href="/campgrounds">View existing campgrounds</a>
        </div>

    </div>


</div>

<% include ../partials/footer.ejs %>
