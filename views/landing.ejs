    <style>
        html{
        }

        body{
            background-color: black;
            color: white;
        }

        .carousel{
            color: white;
            z-index: 0;

        }

        img{
            width: 200px;
            height: 100vh;
            object-fit: cover;
            z-index: 0;
        }

        .carousel-caption{
            height: 250px;
            z-index: 0;

        }

        .carousel-indicators{
            padding-bottom: 40px;
        }

        #landing-header {
            z-index: 1; /*To use this you need a position other than static*/
            position: relative;
            text-align: center;
            padding-top: 30vh; /* viewheight*/
        }

        #landing-header h1 {
            font-size: 3.5em;
            color: #fff;
        }

        .bd-example{
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 0;
            list-style: none;
            margin: 0;
            padding: 0;
        }

    </style>
</head>
<body>


    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>



